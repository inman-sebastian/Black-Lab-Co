{%- if section.settings.velavermenu_enable  and section.settings.hotline_enable -%}
    {%- assign strGrid = 'col-md-9' -%}
{%- elsif section.settings.velavermenu_enable  or section.settings.hotline_enable -%}
    {%- assign strGrid = 'col-md-9' -%}
{%- else -%}
    {%- assign strGrid = 'col-md-12' -%}
{%- endif -%}

{%- if section.settings.bannertop_enabel -%}
    <div id="bannerTop" class="bannerTop text-center active">
        <div class="container"><span class="btn-bannerTop">{{ 'general.bannertop.close' | t }}  x</span></div>  
            <a href="{{ section.settings.bannertop_link }}" title="">
                {%- if section.settings.bannertop_image != blank -%}
                    <img class="img-responsive img-full-mobile" src="{{ section.settings.bannertop_image | img_url: 'master' }}" alt="" />
                {%- else -%}
                    <img class="img-responsive img-full-mobile" src="//velatheme.com/demo_banner/netro/bannertop.jpg" alt="" />
                {%- endif -%}
            </a>                  
        </div>
    </div>
{%- endif -%}
<header id="velaHeader" class="velaHeader">
    <section class="headerWrap">
        {%- if section.settings.topbar_enabel -%}
            <div id="velaTopbar">
                <div class="container-fluid">
                    <div class="velaTopbarInner rowFlex rowFlexMargin flexAlignCenter">
                        <div class="velaTopbarLeft col-xs-12 text-center">
                            {%- if section.settings.topbar_title != blank -%}
                                <div>
                                    {{ section.settings.topbar_title }}
                                </div>                            
                            {%- endif -%}
                        </div>
                    </div>
                </div>
            </div>
        {%- endif -%}
        <div class="velaHeaderMain headerMenu">
            <div class="container-fluid">
                <div class="headerContent rowFlex rowFlexMargin flexAlignCenter">
                    <div class="velaHeaderMobile hidden-lg hidden-md col-xs-3 col-sm-3">
                        <div class="menuBtnMobile hidden-lg hidden-md">
                            <div id="btnMenuMobile" class="btnMenuMobile">
                                <span class="iconMenu"></span>
                                <span class="iconMenu"></span>
                                <span class="iconMenu"></span>
                                <span class="iconMenu"></span>
                            </div>
                        </div>
                    </div>
                    <div class="velaHeaderLeft col-xs-6 col-sm-6 col-md-2">
                        {%- if template == 'index' -%}
                            <h1 class="velaLogo" itemscope itemtype="http://schema.org/Organization">
                        {%- else -%}
                            <div class="velaLogo" itemscope itemtype="http://schema.org/Organization">
                        {%- endif -%}
                        {%- if section.settings.logo_size != blank -%}
                            {% assign wimg = section.settings.logo_size | split: 'x' | first  %}
                            {% assign himg = section.settings.logo_size | split: 'x' | last  %}
                        {%- else -%}
                            {% assign wimg = "132"  %}
                            {% assign himg = "66"  %}
                        {%- endif -%} 
                        <a href="/" itemprop="url" class="velaLogoLink" style="width: {{wimg}}px; height: {{himg}}px">
                            {%- if section.settings.logo_svg != blank -%}
                                <span class="text-hide">{{ shop.name }}</span>
                                <img class="img-responsive" src="{{ section.settings.logo_svg }}" alt="{{ shop.name }}"/>  
                            {%- elsif section.settings.logo -%}
                                <span class="text-hide">{{ shop.name }}</span>
                                {% include "image-global" with image: section.settings.logo %}
                            {%- else -%}
                                {{ shop.name }}
                            {%- endif -%}
                        </a>
                        {%- if template != 'index' -%}
                            </div>
                        {%- else -%}
                            </h1>
                        {%- endif -%}
                    </div>
                    <div class="velaMainmenu velaHeaderCenter col-xs-3 col-sm-3 col-md-8 hidden-xs hidden-sm">
                        {%- include 'vela-header-menu' -%}
                    </div>
                    <div class="velaHeaderRight col-xs-3 col-sm-3 col-md-2"> 
                        <a class="velaSearchIcon" href="#velaSearchTop" data-toggle="collapse" title="{{ 'general.search.submit' | t }}">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" width="20px" style="-ms-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg);" preserveAspectRatio="xMidYMid meet" viewBox="0 0 1040 1024"><path d="M1031 969L720 656q93-111 93-256 0-109-53.5-201t-146-145.5T412.5 0 212 53.5 66.5 199 13 400t53.5 201T212 746.5 413 800q149 0 262-98l310 312q10 10 23 10t22.5-9.5 9.5-23-9-22.5zM413 737q-92 0-169.5-45.5T121 568.5 76 400t45-168.5 122.5-123 169-45.5 169 45.5 122.5 123T749 400q0 39-9 77t-25.5 71-39.5 62.5-52 52.5-62 39.5-71 25.5-77 9z" /></svg>
                        </a>                                      
                        {% include 'vela-carttop' %}
                        {%- if shop.customer_accounts_optional or shop.customer_accounts_enabled -%}                      
                            <a class="velaIconTopLinks" href="#velaTopLinks" data-toggle="collapse" title="{{ 'general.search.submit' | t }}">
                                <span class="iconMenu"></span>
                                <span class="iconMenu"></span>
                                <span class="iconMenu"></span>
                            </a>                                      

                            {% include 'vela-toplinks' %}
                        {%- endif -%}
                    </div>
                </div>
            </div>
        </div>  
    </section>
</header>
