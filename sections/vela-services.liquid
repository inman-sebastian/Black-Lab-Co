{%- if section.settings.color_bg != 'rgba(0,0,0,0)' -%}
    {% capture bgColor %}
        background-color: {{ section.settings.color_bg }};
    {% endcapture %}
{%- endif -%}
{%- if section.settings.padding_block != blank -%}
    {% capture paddingblock %}
        padding: {{section.settings.padding_block}};
    {% endcapture %}
{%- endif -%}
{%- if section.settings.margin_block != blank -%}
    {%- capture marginblock -%}
        margin: {{section.settings.margin_block}};
    {%- endcapture -%}
{%- endif -%}
<div class="velaServices overflow-hidden {% unless section.settings.color_bg != 'rgba(0,0,0,0)' %}vela-section{% endunless%}" style="{{ bgColor}} {{ paddingblock }} {{ marginblock }}">
    <div class="container{%- if section.settings.full_with -%}-full{%- endif -%}">
        <div class="velaServicesInner">
            <div class="velaContent">
                {%- if section.blocks.size > 0 -%}
                    <div class="rowFlex">
                        {% for block in section.blocks %}
                            <div class="{%- if section.settings.class != blank -%}{{ section.settings.class }}{%- else -%}col-xs-12 col-sm-4{%- endif -%}">
                                <div class="boxService d-flex flexAlignCenter">
                                    {%- if block.settings.icon != blank -%}
                                        <div class="boxServiceImage">
                                            <i class="fa {{ block.settings.icon }}"></i>
                                        </div>
                                    {%- endif -%}
                                    <div class="boxServiceContent">
                                        {%- if block.settings.box_title != blank -%}
                                            <h4 class="boxServiceTitle">{{ block.settings.box_title }}</h4>
                                        {%- endif -%}
                                        {%- if block.settings.box_desc != blank -%}
                                            <div class="boxServiceDesc">
                                                {{ block.settings.box_desc }}
                                            </div>
                                        {%- endif -%}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Vela Service",
        "class": "velaFramework",
        "settings": [
            {
                "type": "header",
                "content": "Design Section"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "Enabel Full Width?"
            },
            {
                "type": "color",
                "id": "color_bg",
                "label": "Background color",
                "default": "rgba(0,0,0,0)"
            },
            {
                "type": "text",
                "id": "padding_block",
                "label": "Padding",
                "placeholder": "0px 0px",
                "info": "if background color is blank, it will be remove on the mobile"
            },
            {
                "type": "text",
                "id": "margin_block",
                "label": "Margin",
                "default": "0 0 30px",
                "placeholder": "0px 0px",
                "info": "ex: 0px 0px 0px"
            },
            {
                "type": "header",
                "content": "General Settings"
            },
            {
                "type": "text",
                "id": "class",
                "label": "Class name",
                "default": "col-xs-12 col-sm-3",
                "info": "Grid class bootstrap"
            }

        ],
        "blocks": [
            {
                "type": "image",
                "name": "Service item",
                "settings": [
                    {
                        "type": "text",
                        "id": "icon",
                        "label": "Font Simple Line Icon",
                        "placeholder": "fa-rocket",
                        "info": "You can see icon class [here](https://fontawesome.com/v4.7.0/icons/)" 
                    },
                    {
                        "type": "text",
                        "id": "box_title",
                        "label": "Box heading"
                    },
                    {
                        "type": "textarea",
                        "id": "box_desc",
                        "label": "Box description"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Our services",
                "category": "5. Vela Text"
            }
        ]
    }
{% endschema %}